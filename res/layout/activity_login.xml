<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include layout="@layout/common_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin" >

        <EditText
            android:id="@+id/et_login_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/et_margain"
            android:background="@drawable/board"
            android:hint="@string/login_et_authorization"
            android:padding="@dimen/et_padding"
            android:textSize="@dimen/text_size" />

        <Button
            android:id="@+id/btn_login_vertify"
            style="@style/btn_style0"
            android:text="@string/login_btn_vertify" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_login_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/fourty"
        android:gravity="center"
        android:padding="@dimen/activity_big_padding"
        android:text="ver"
        android:textColor="@color/blue03" />

</RelativeLayout>