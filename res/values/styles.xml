<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
     <style name="Theme.Notitle" parent="android:Theme.Holo.Light">  
	    <item name="android:windowNoTitle">true</item>  
	    </style>
     <style name="btn_style3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:background">@drawable/btn_press_selected</item>
    </style>
    <style name="btn_style0">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:background">@drawable/btn_press_selected</item>
    </style>
    <style name="btn_style_no_margin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:background">@drawable/btn_press_selected</item>
    </style>
    <style name="btn_style1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:background">@drawable/btn_press_selected</item>
    </style>
     <style name="btn_style2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:background">@drawable/btn_selected_style</item>
    </style>
    
      <style name="linear_weight_1_vertical">
          <item name="android:layout_width">0dp</item>
          <item name="android:layout_weight">1</item>
          <item name="android:layout_height">wrap_content</item>
          <item name="android:orientation">vertical</item>
          <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="tv_weight_1">
          <item name="android:layout_width">0dp</item>
          <item name="android:layout_weight">1</item>
          <item name="android:layout_height">wrap_content</item>
          <item name="android:gravity">center_horizontal</item>
          <item name="android:textSize">@dimen/text_size</item>
    </style>
     <style name="tv_weight_1_v">
          <item name="android:layout_width">match_parent</item>
          <item name="android:layout_weight">1</item>
          <item name="android:layout_height">0dp</item>
          <item name="android:gravity">center_vertical</item>
          <item name="android:textSize">@dimen/text_size</item>
    </style>
    
     <style name="et_board">
         <item name="android:layout_width">match_parent</item>
          <item name="android:layout_height">wrap_content</item>
          <item name="android:padding">@dimen/et_padding_little</item>
          <item name="android:layout_margin">@dimen/et_padding_little</item>
          <item name="android:textSize">@dimen/text_size</item>
          <item name="android:background">@drawable/board</item>
     </style>
     <style name="et_no_board">
         <item name="android:layout_width">match_parent</item>
          <item name="android:layout_height">wrap_content</item>
          <item name="android:padding">@dimen/et_padding_little</item>
          <item name="android:layout_margin">@dimen/et_padding_little</item>
          <item name="android:textSize">@dimen/text_size</item>
     </style>
     
       <style name="seek_bar">
         <item name="android:layout_width">match_parent</item>
          <item name="android:layout_height">wrap_content</item>
          <item name="android:layout_margin">@dimen/seek_bar_margin</item>
     </style>
     <style name="tv_pad_left">
         <item name="android:layout_width">match_parent</item>
          <item name="android:layout_height">wrap_content</item>
          <item name="android:paddingLeft">@dimen/tv_big_padding</item>
          <item name="android:textSize">@dimen/text_size</item>
     </style>
     <style name="tv_tips">
         <item name="android:layout_width">match_parent</item>
          <item name="android:layout_height">wrap_content</item>
          <item name="android:padding">@dimen/tv_big_padding</item>
          <item name="android:textSize">@dimen/text_size_small</item>
          <item name="android:textColor">@color/red</item>
     </style>

</resources>
